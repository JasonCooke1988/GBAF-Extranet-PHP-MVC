{% extends 'layout/layout.twig' %}

{% block main %}
    <main class="center">

                <div class="borderAndShadow stretch">
                    <h2>Connexion au compte utilisateur</h2>
                    <form action="{{ url('user!signinaction') }}"method="post">
                        <div>
                            <label>Nom d'utilisateur</label><br>
                            <input type="text" name="userName" class="form-control stretch" value="" minlength="1" maxlength="50">
                        </div>
                        <div>
                            <label>Mot de passe</label><br>
                            <input type="password" name="password" class="form-control stretch" value="" minlength="5" maxlength="50">
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Confirmer">
                            <input type="reset" class="btn btn-default" value="Reset">
                        </div>
                    </form>
                    <p class="error"> {{ error }}</p>
                    <p class="alert"> {{ alert }}</p>
                </div>



                <div class="borderAndShadow stretch">
                    <p>Mot de passe oubli√© ? Renseignez votre nom d'utilisateur pour changer de mot de passe.</p>
                    <form action="{{ url('user!questionGet') }}"method="post">
                        <div>
                            <label for="userName">Nom d'utilisateur</label>
                            <input id="userName" type="text" name="userName" class="form-control stretch" value="" minlength="1" maxlength="50">
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Confirmer">
                            <input type="reset" class="btn btn-default" value="Reset">
                        </div>
                    </form>
                    <p class="passResetError">{{ passResetError }}</p>
                </div>


    </main>
{% endblock %}